@inject IServicesInfo serviceMovie

<div class="container-fluid bg-danger p-0 p-lg-5">
<div class="row">
    <div class="card-group">
    @foreach (var Movie in Movies)
    {
        <div class="col-lg-4">

            <div class="card bg-warning">
                <img src=@Movie.Image class="card-img-top" alt=@Movie.Title>
                <div class="card-body">
                    <h5 class="card-title">@Movie.Title</h5>
                    <p class="card-text">@Movie.Sinopsis</p>
                    <p class="card-text"><small class="text-muted">@Movie.Rating.ToString()</small></p>
                </div>
            </div>
        @* <div class="card-group d-none d-md-flex"> *@
        </div>
    }
    </div>
</div>
</div>
@code {

    [Parameter] public List<Movie> Movies { get; set; }
    
    protected override void OnInitialized()
    {
        Movies = serviceMovie.GetMoviesCard();
    }
}