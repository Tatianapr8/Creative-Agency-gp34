@inject IServicesInfo serviceMovie 

@* Carrusel de imagenes *@

<div class="container-fluid p-0 py-lg-2 bg-warning">

  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src=@Movies[0].Image class="d-none d-lg-block w-75 rounded mx-auto" alt="Jurassic Hunt">
        <img src=@Movies[0].Image class="d-md-block d-lg-none w-100 rounded mx-auto" alt="Jurassic Hunt">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="fs-1">@Movies[0].Title</h5>
          <p>@Movies[0].Genre</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="@Movies[1].Image" class="d-none d-lg-block w-75 rounded mx-auto" alt="Black Widow">
        <img src="@Movies[1].Image" class="d-md-block d-lg-none w-100 rounded mx-auto" alt="Black Widow">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="fs-1">@Movies[1].Title</h5>
          <p>@Movies[1].Genre</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="@Movies[2].Image" class="d-none d-lg-block w-75 rounded mx-auto" alt="Sucide Squad">
        <img src="@Movies[2].Image" class="d-md-block d-lg-none w-100 rounded mx-auto" alt="Sucide Squad">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="fs-1">@Movies[2].Title</h5>
          <p>@Movies[2].Genre</p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</div>


@code {

    [Parameter] public List<Movie> Movies { get; set; }

    protected override void OnInitialized()
    {
        Movies = serviceMovie.GetMoviesPoster();
    }
}